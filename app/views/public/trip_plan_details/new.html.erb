<div class="container">
  
  <h2><b>Detail Plan Input</b></h2>

 <div class="mb-5">
  <% if @trip_plan_detail.errors.any? %>
   <div class="text-red">※<%= @trip_plan_detail.errors.count %>件の未入力の項目があります</div>
  <% end %>
 </div>

  <%= form_with model: @trip_plan_detail, url: trip_plan_trip_plan_details_path, method: :post do |f| %>
  <div class="form-group mb-4">
    <div class="row">
      <b>・時間</b><div class="text-red">※必須</div>
    </div>
    <div class="col-8"><%= f.time_field :hour %>　～　</div>
  </div>

  <div class="form-group mb-4">
    <div class="row">
      <b>・カテゴリー</b><div class="text-red">※必須</div>
    </div>
    <div class="col-7"><%= f.select :category, [["食事","食事"], ["移動","移動"], ["遊び","遊び"], ["ホテル","ホテル"]] %></div>
  </div>

  <div class="form-group mb-4">
    <div class="row">
      <b>・日数</b><div class="text-red">※必須</div>
    </div>
    <div class="col-7"><%= f.number_field :what_day, class: "col-3 hoge", min: 0, placeholder: '例）3' %>日目</div>
  </div>

  <div class="form-group mb-4">
    <div class="row">
      <b>・目的地</b><div class="text-red">※必須</div>
    </div>
    <div class="col-12"><%= f.text_field :destination, class: "col-7", placeholder: '例）スカイツリー' %></div>
  </div>

  <div class="form-group mb-4">
    <div class="row">
      <b>・予算</b><div class="text-red">※必須</div>
    </div>
    <div class="col-12"><%= f.text_field :price, class: "col-2", placeholder: '例）100000' %>円</div>
  </div>

  <div class="row justify-content-center"><%= f.submit '登録', class: "yellow-btn text-dark" %></div>

  <% end %>

</div>