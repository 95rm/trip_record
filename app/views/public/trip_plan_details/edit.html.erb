<div class="container">

  <%= form_with model: @trip_plan_detail, url: trip_plan_trip_plan_detail_path, method: :patch do |t| %>
    <div class="row justify-content-center">
      <div><p>時間</p></div>
      <div class="col-8"><%= t.time_field :hour %></div>
    </div>

    <div class="row justify-content-center">
      <div><p>カテゴリー</p></div>
      <div class="col-7"><%= t.select :category, [["食事","食事"], ["移動","移動"], ["遊び","遊び"], ["ホテル","ホテル"]] %></div>
    </div>

    <div class="row justify-content-center">
      <div><p>日数</p></div>
      <div class="col-7"><%= t.number_field :what_day %>日目</div>
    </div>

    <div class="row justify-content-center">
      <div><p>目的地</p></div>
      <div class="col-7"><%= t.text_field :destination %></div>
    </div>

    <div class="row justify-content-center">
      <div><p>予算</p></div>
      <div class="col-7"><%= t.text_field :price %>円</div>
    </div>

    <div class="row justify-content-center"><%= t.submit '登録', class: "rainbow-btn text-dark" %></div>
  <% end %>


</div>