<div class="container">
  <h3><b>レビュー</b><h3>

 <% if @trip_plan_detail.trip_plan.user_id == current_user.id %><!--子モデルから親モデルに戻りidを取得している!-->
  <%= form_with model: Review.new, url: trip_plan_detail_reviews_path, method: :post do |f| %>
   <div class="row mb-5">
    <p>・写真</p>
    <%= f.file_field :image, accept: "image/*" %><!--画像のみ投稿可!-->
   </div>

   <div class="row mt-3">
    <p>・レビュー記入枠</p>
   </div>
   <div class="row mb-5">
    <%= f.text_area :review %>
    <div class="ml-3">
     <%= f.submit "投稿", class: "btn btn-primary" %>
    </div>
   </div>
  <% end %>
 <% end %>

 <p>・投稿写真</p>
  <% if @review.nil? %>
  <%= image_tag 'no_image.jpg' %>
  <% else %>
  <%= image_tag @review.get_image(300,300) %>
  <% end %>

 <p>・レビュー内容</p>
 <%= @review.try(:review) %>

<% if @trip_plan_detail.trip_plan.user_id == current_user.id %>
    <div class="row row justify-content-start">
     <%= link_to "変更", edit_trip_plan_detail_reviews_path, class: "btn btn-success ml-1" %>
    </div>
<% end %>

</div>