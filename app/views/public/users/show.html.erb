<div class="container">
  <p>current_user以外のページ</p>

  <div class="row">
   <div class="col-2"><p>アカウント名</p></div>
   <div class="col-2"><%= @user.account_name %></div>
  </div>

  <!--フォロー・フォロワー機能!-->
  <div class="row">
   <p><% "id: #{@user.id}" %></p>
   <div class="col-2"><p><%= link_to "フォロー数: #{@user.follower.count}", follows_user_path(@user.id) %></p></div>
   <div class="col-2"><p><%= link_to "フォロワー数: #{@user.followed.count}", followers_user_path(@user.id) %></p></div>
   <% if current_user.following?(@user) %>
     <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete %>
   <% else %>
     <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
   <% end %>
  </div>

  <div><p>旅行計画投稿一覧</p></div>
  <% @trip_plans.each do |t| %>
    <%=link_to t.title_name, trip_plan_path(t.id) %>
  <% end %>

  <div class="row justify-content-center">
   <%= link_to users_path do %>
    <i class="fas fa-history fa-2x"></i>
   <% end %>
   <%= link_to research_trip_plans_path do %>
    <i class="fab fa-sistrix fa-2x"></i>
   <% end %>
   <%= link_to new_trip_plan_path do %>
    <i class="fas fa-plus fa-2x"></i>
   <% end %>
   <%= link_to users_my_page_path do %>
    <i class="fas fa-home fa-2x"></i>
   <% end %>
  </div>

  <div class="row justify-content-center">
   <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
  </div>

</div>