<div class="container">
 <% @user.follower_user.where.not(id: current_user.id).each do |user| %>
  <p>
    <%= "アカウント名: #{user.account_name}" %>
    <% if current_user.following?(user) %>
     <%= link_to '削除', user_relationships_path(user.id), method: :delete, class: "btn btn-secondary" %>
    <% else %>
     <%= link_to 'フォロー', user_relationships_path(user.id), method: :POST, class: "btn btn-primary" %>
    <% end %>
  </p>
 <% end %>
</div>