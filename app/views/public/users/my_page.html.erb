<div class="container">
  <h3><b>My page</b></h3>

  <div class="row">
   <div class="col-2"><p>アカウント名</p></div>
   <div class="col-8"><%= @user.account_name %></div>
   <div class="col-1"><%= link_to "変更", users_information_edit_path, class: "rainbow-btn" %></div>
  </div>

  <!--フォロー・フォロワー機能!-->
  <div class="row mt-3">
   <p><% "id: #{@user.id}" %></p>
   <div class="col-2"><p><%= link_to "フォロー数: #{@user.follower.count}", follows_user_path(@user.id), class: "text-dark" %></p></div>
   <div class="col-2"><p><%=link_to "フォロワー数: #{@user.followed.count}", followers_user_path(@user.id), class: "text-dark" %></p></div>
  </div>

  <div class="mt-3">旅行計画投稿一覧</div>
  <% @trip_plans.each do |t| %>
   <div class="row mt-2">
     ・<%= link_to t.title_name, trip_plan_path(t.id), class: "text-dark" %>
   </div>
  <% end %>

</div>

