<div class="form">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="text-input">
      <label for="email"><h5><b>・E-mail</h5></b></label>
      <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "col-3", placeholder: "E-mail" %>
      <span class="separator"> </span>
    </div>

    <div class="text-input">
      <label for="password"><h5><b>・Password</h5></b></label>
      <%= f.password_field :password, autocomplete: "current-password", class: "col-3", placeholder: "password" %>
      <span class="separator"> </span>
    </div>

    <div class="form-bottom">
      <%= f.submit "Login" %>
    </div>

  <% end %>

  <div class="row mt-5 justify-content-center">
    <h6>新規登録の方は</h6><h6><%= link_to 'こちら', new_user_registration_path %></h6><h6>から</h6>
  </div>

  <div class="row mt-5 justify-content-center mb-5">
    <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post %>
  </div>

</div>