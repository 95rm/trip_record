<div class="form">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

    <div class="text-input">
      <label for="username">User Nmae</label>
      <%= f.text_field :account_name, autofocus: true, autocomplete: "account_name", class: "col-3", placeholder: "User Name" %>
      <span class="separator"> </span>
    </div>

    <div class="text-input">
      <label for="email">E-mail</label>
      <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "col-3", placeholder: "E-mail" %>
      <span class="separator"> </span>
    </div>

    <div class="text-input">
      <label for="psssword">Password(6文字以上)</label>
      <%# if @minimum_password_length %>
      <em><%#= @minimum_password_length %></em>
      <%# end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "col-3", placeholder: "password" %>
      <span class="separator"> </span>
    </div>

    <div class="text-input">
      <label for="psssword">パスワード(確認用)</label>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-3", placeholder: "password" %>
      <span class="separator"> </span>
    </div>

    <div class="form-bottom">
      <%= f.submit "sign up" %>
    </div>
<% end %>

  <div class="row mt-5 justify-content-center mb-5">
   ログインの方は<%= link_to 'こちら', new_user_session_path %>から
  </div>

</div>
