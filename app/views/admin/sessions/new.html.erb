<div class="container">
<h2>管理者ログイン画面</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group">
  <div class="row">
    <%= f.label :"メールアドレス", class: "col-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-2" %>
  </div>
  </div>

  <div class="form-group">
  <div class="row">
    <%= f.label :"パスワード", class: "col-2" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "col-2" %>
  </div>
  </div>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>

</div>
