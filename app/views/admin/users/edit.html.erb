<div class="container">
<h3><b>ユーザー編集画面</b></h3>

  <%= form_with model: @user, url: admin_user_path(@user.id), method: :patch do |u| %>
  <div class="row mt-3">
    <div class="col-2"><p>アカウント名</p></div>
    <div class="col-5"><%= u.text_field :account_name %></div>
  </div>

  <div class="row">
    <div class="col-2"><p>メールアドレス</p></div>
    <div class="col-5"><%= u.text_field :email %></div>
  </div>

  <div class="row">
    <%= u.submit "登録", class: "btn btn-success" %>
  </div>

  <% end %>
</div>