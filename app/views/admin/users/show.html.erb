<div class="container">
 <h3><b>ユーザー詳細画面</b></h3>

 <table class="table">
  <thead>
   <tr>
    <th>ユーザーID</th>
    <th>アカウント名</th>
    <th>メールアドレス</th>
    <th>退会ステータス</th>
   </tr>
  </thead>
  <tbody>
   <tr>
    <td><%= @user.id %></td>
    <td><%= @user.account_name %></td>
    <td><%= @user.email %></td>
    <td>
     <% if @user.is_deleted == true %>
      <p class="text-secondary">退会</p>
     <% else @user.is_deleted == false %>
      <p class="text-success">有効</p>
     <% end %>
    </td>
   </tr>
  </tbody>
 </table>

  <%= link_to "編集", edit_admin_user_path(@user.id), class: "btn btn-success" %>

</div>